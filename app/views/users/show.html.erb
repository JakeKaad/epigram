<div class="row">
  <% @photos.each do |photo| %>
    <div class="photo-box">
      <figure>
        <%= link_to image_tag(photo.photo.url), user_photo_path(@user, photo)  %>
        <figcaption><%= photo.name %></figcaption>
      </figure>
    </div>
  <% end %>
</div>

<% if current_user == @user %>

<div class="add-photo well">
  <h3>Add photo</h3>
    <%= form_for([@user, @photo]) do |f| %>
      <div class="form-group">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit "Upload Photo" %>
    <% end %>
  <% end %>
</div>
